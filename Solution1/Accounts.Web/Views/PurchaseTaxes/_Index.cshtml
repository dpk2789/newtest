@model IEnumerable<Accounts.Model.Model.PurchaseTaxes>

<div class="panel panel-default small">
    <div class="panel-heading">
        <strong>Add Taxes</strong>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TaxCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Percent)
                </th>
                <th>
                    <p>
                        @Html.ActionLink("Add", "Create", "PurchaseTaxes", new { purchaseBillId = ViewBag.purchaseBillId },
                                  new { @class = "btn btn-primary btn-xs", data_modal = "purchasetax" })
                    </p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaxCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Percent)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Edit", "PurchaseTaxes",
                                             new { id = item.Id }, new { @class = "btn btn-default btn-xs", data_modal = "purchasetax" })

                        @Html.ActionLink("Delete", "Delete", "PurchaseTaxes",
                                          new { id = item.Id }, new { @class = "btn btn-danger btn-xs", data_modal = "purchasetax" })
                    </td>
                </tr>
            }
            <tr>
                @{

                    decimal taxtotal = ViewBag.TaxTotal;
                }
                <td></td>
                <td></td>
                <td><b>Total :-</b> <b> @String.Format("{0:#,###.00}", taxtotal)<text> %</text> </b></td>
                <td></td>
            </tr>
        </table>
    </div>
</div>
