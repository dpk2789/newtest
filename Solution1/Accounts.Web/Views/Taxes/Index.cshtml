@model IEnumerable<Accounts.Model.Model.Tax>

<h2>Taxes</h2>
<hr />

<div class="table-responsive">
    <table class="table table-hover table-striped table-condensed table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaxCategory.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percent)
            </th>          
            <th>
                <p>
                    @Html.ActionLink("Create Tax", "Create", null, new { @class = "btn btn-success btn-xs" })
                </p>
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaxCategory.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percent)
            </td>
         
            <td>
             @Html.ActionLink("Details", "Edit", "Taxes", new { id = item.Id }, new { @class = "btn btn-default btn-xs" }) |
            @Html.ActionLink("Delete", "Delete", "Taxes", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
        }

    </table>
</div>
